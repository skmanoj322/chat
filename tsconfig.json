{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    /* Modules */
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Enabled by esModuleInterop
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include all TypeScript files in src
  "exclude": ["node_modules"] // Exclude node_modules from the compilation
}
